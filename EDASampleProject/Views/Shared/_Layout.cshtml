<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Staff Application</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/notify.min.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />

</head>
<body style="background-color: lightcyan;">
    <nav class="navbar navbar-expand-sm fixed-top" style="background-color: darkcyan">
        <div class="container">
            <a class="navbar-brand" href="#" bold style="color:orange"><b>Staff Management System</b></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/Staff/Home" style="color:orange"><b>Home</b></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Staff/Index" style="color:orange"><b>Staff</b></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Staff/About" style="color:orange"><b>About</b></a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        <nav style="margin: 10px 0px;">
        </nav>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sample Staff Application</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/Scripts.js"></script>
</body>
</html>
