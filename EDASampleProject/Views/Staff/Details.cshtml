@model EDASampleProject.Models.staff01office_info

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    
    <div class="container">
        <div class="row">
            @*<hr />*@
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.staff01image_path)
            @Html.HiddenFor(model => model.staff01uin)

            <div class="col">
                <div class="form-group">
                    @Html.LabelFor(model => model.staff01name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div>
                        @Html.EditorFor(model => model.staff01name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.staff01position, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div>
                        @Html.EditorFor(model => model.staff01position, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.staff01depart, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div>
                        @Html.EditorFor(model => model.staff01depart, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.staff01email, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div>
                        @Html.EditorFor(model => model.staff01email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.staff01salary, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div>
                        @Html.EditorFor(model => model.staff01salary, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    @Html.LabelFor(model => model.staff01image_path, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div>
                        <img src="@Url.Content(Model.staff01image_path)" style="margin:10px" height="200" width="200" id="imagePreview" />
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<p>
    <div class="form-actions no-color" style="margin: 10px 0px">
        <a class="btn  btn-lg btn-info" href="@Url.Action("Index", "Staff")" data-original-title="Index" data-placement="top"><i class="fa fa-angle-left"></i> Back</a>
        <a class="btn  btn-lg btn-info" href="@Url.Action("EditStaff", "Staff", new { id = Model.staff01uin })" data-original-title="Index" data-placement="top"><i class="fa fa-pencil"></i> Edit</a>

    </div>
</p>
